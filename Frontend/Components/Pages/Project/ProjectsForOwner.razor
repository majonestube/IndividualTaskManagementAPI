@page "/ProjectsForOwner"
@rendermode InteractiveServer
@using Frontend.Components.Components
@using Frontend.Components.Layout
@using Frontend.Services
@using MyShared.Models
@inject NavigationManager Navigation
@inject JwtHelper JwtHelper
@layout AfterLoginLayout

<h3>Your projects</h3>

@if (loading)
{
    <p>Loading...</p>
}
else if (projects == null)
{
    <p>There was an error retrieving your projects</p>
} 
else if (projects.Length == 0)
{
    <p>You are not the owner of any projects.</p>
}
else
{
    @foreach (var project in projects)
    {
        <ProjectOwnerCard Project="project" OnDeleted="LoadProjects"/>
    }
}

<button @onclick="GoToNewProject">New Project</button>

@code {
    private ProjectDto[]? projects;
    private bool loading = true;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender) return;

        await LoadProjects();
    }

    private async Task LoadProjects()
    {
        loading = true;
        try
        {
            var client = await JwtHelper.GetAuthenticatedClientAsync();
            projects = await client.GetFromJsonAsync<ProjectDto[]>("api/project/visible");
        }
        catch (Exception ex)
        {
            Console.WriteLine("Error calling API: " + ex.Message);
        }
        finally
        {
            loading = false;
            StateHasChanged();
        }
    }

    private void GoToNewProject()
    {
        Navigation.NavigateTo("/NewProject");
    }
}