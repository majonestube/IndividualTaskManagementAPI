@using Frontend.Components.Components
@using Frontend.Services
@using Microsoft.AspNetCore.Components.Authorization
@inherits LayoutComponentBase
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider


<div class="page">
    <div class="sidebar">
        <NavMenu/>
    </div>

    <main>
        <div>
            <AuthorizeView>
                <Authorized>
                    <p>Welcome @context.User.Identity?.Name</p>
                    <a @onclick="Logout" style="cursor: pointer">Log out</a>
                </Authorized>
                <NotAuthorized>
                    <a href="Register" class="px-2">Register</a>
                    <a href="Login">Login</a>
                </NotAuthorized>
            </AuthorizeView>
        </div>
        
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">ðŸ—™</a>
</div>
@code {
    private async Task Logout()
    {
        var customAuthStateProvider = (JwtAuthenticationStateProvider)AuthenticationStateProvider;
        await customAuthStateProvider.MarkUserAsLoggedOut();
        Navigation.NavigateTo("/Login", false);
    }
}