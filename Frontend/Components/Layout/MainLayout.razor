@using Frontend.Services
@using Microsoft.AspNetCore.Components.Authorization
@inherits LayoutComponentBase
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider

<div class="page">
    <div class="sidebar">
        <NavMenu/>
    </div>

    <main>
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                    <div class="auth-dropdown">
                        <button class="auth-trigger" @onclick="ToggleUserMenu">
                            @context.User?.Identity?.Name
                            <i class="bi bi-caret-down-fill"></i>
                        </button>
                        @if (showUserMenu)
                        {
                            <div class="auth-menu">
                                <a class="auth-menu-item" @onclick="Logout">
                                    <i class="bi bi-arrow-right"></i> Log out
                                </a>
                            </div>
                        }
                    </div>
                </Authorized>
                <NotAuthorized>
                    <NavLink href="/Login">Log in / Register</NavLink>
                </NotAuthorized>
            </AuthorizeView>
        </div>
        
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private bool showUserMenu = false;

    private void ToggleUserMenu()
    {
        showUserMenu = !showUserMenu;
    }

    private async Task Logout()
    {
        var customAuthStateProvider = (JwtAuthenticationStateProvider)AuthenticationStateProvider;
        await customAuthStateProvider.MarkUserAsLoggedOut();
        Navigation.NavigateTo("/Login", false);
    }

}