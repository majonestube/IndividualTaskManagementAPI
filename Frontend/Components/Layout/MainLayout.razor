@using Frontend.Components.Components
@using Frontend.Services
@using Microsoft.AspNetCore.Components.Authorization
@inherits LayoutComponentBase
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider


<div class="page">
    <div class="sidebar">
        <NavMenu/>
    </div>

    <main>
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                    <p>@context.User?.Identity?.Name</p>
                    <a @onclick="Logout" style="cursor: pointer">Log out</a>
                </Authorized>
                <NotAuthorized>
                    <NavLink href="/Login">Log in / Register</NavLink>
                </NotAuthorized>
            </AuthorizeView>
        </div>
        
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {

    private async Task Logout()
    {
        var customAuthStateProvider = (JwtAuthenticationStateProvider)AuthenticationStateProvider;
        await customAuthStateProvider.MarkUserAsLoggedOut();
        Navigation.NavigateTo("/Login", false);
    }

}