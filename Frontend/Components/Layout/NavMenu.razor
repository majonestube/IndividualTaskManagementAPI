@using Frontend.Components.Components
@using Frontend.Services
@using MyShared.Models
@rendermode InteractiveServer
@inject JwtHelper JwtHelper
@inject UiStateService Ui

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">LifeOrganizer!</a>
        
        <div class="nav-notification-container">
            <button class="notification-button" @onclick="ToggleNotifications">
                <i class="bi bi-bell"></i>
            </button>
            @if (unreadNotifications > 0)
            {
                <div class="unread-notifications-count">@unreadNotifications</div>
            }
            
            @if (showNotifications && notifications?.Any() == true)
            {
                <div class="notifications-list">
                    @foreach (var notification in notifications)
                    {
                        <NotificationCard Notification="@notification"></NotificationCard>
                    }
                </div>
            }
        </div>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler"/>

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="AvailableProjects">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Available Projects
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="YourProjects">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Your Projects
            </NavLink>
        </div>
        
    </nav>
</div>

@code {
    private NotificationDto[]? notifications;
    private int unreadNotifications = 0;
    private bool showNotifications = false;
    private bool loggedIn = false;
    private bool initialized;

    protected override void OnInitialized()
    {
        Ui.OnChange += HandleUiChange;
    }

    private async void HandleUiChange()
    {
        if (!initialized) return;
        
        var token = await JwtHelper.GetAuthorizationTokenAsync();
        if (string.IsNullOrEmpty(token)) return;
        
        await LoadNotifications();
        await InvokeAsync(StateHasChanged);
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender) return;

        initialized = true;
        await LoadNotifications();
    }

    private async Task LoadNotifications()
    {
        try
        {
            var client = await JwtHelper.GetAuthenticatedClientAsync();
            notifications = await client.GetFromJsonAsync<NotificationDto[]>($"api/Notification/notifications/user");
            unreadNotifications = notifications.Count(n => !n.IsRead);
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine("Error getting notifications: " + ex.Message);
        }
    }
    
    private void ToggleNotifications()
    {
        showNotifications = !showNotifications;
    }
}